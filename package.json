{
    "name": "@rimac-technology/style-guide",
    "version": "8.0.3",
    "description": "Shareable style guide",
    "bugs": {
        "url": "https://github.com/RimacTechnology/style-guide/issues"
    },
    "repository": "git@github.com:RimacTechnology/style-guide.git",
    "license": "MIT",
    "author": "Rimac Technology d.o.o.",
    "main": "index.js",
    "files": [
        "prettier",
        "package-json",
        "eslint",
        "shared",
        "stylelint"
    ],
    "scripts": {
        "cm": "cz",
        "postinstall": "husky install",
        "lint": "yarn lint:source & yarn lint:config & yarn lint:package-json",
        "lint:config": "prettier --log-level warn --no-editorconfig --no-error-on-unmatched-pattern --write \"./**/*{yaml,yml,json,md,prisma,graphql,css}\" ",
        "lint:package-json": "npmPkgJsonLint --configFile ./.packagerc.js .",
        "lint:source": "eslint './**/*.{js,ts}' --quiet --cache --cache-strategy content --cache-location '.eslintcache/'",
        "prepublishOnly": "pinst --disable",
        "postpublish": "pinst --enable",
        "release": "semantic-release",
        "test": "yarn test:eslint && yarn test:prettier && yarn test:package-json && yarn test:stylelint",
        "test:eslint": "eslint ./__tests__/**/*.{ts,tsx}",
        "test:package-json": "npmPkgJsonLint --configFile ./.packagerc.js ./__tests__/",
        "test:prettier": "prettier --log-level warn --check ./__tests__/prettier.json",
        "test:stylelint": "stylelint --cache --config='./stylelint/index.js' './**/*.css'"
    },
    "commitlint": {
        "extends": [
            "@commitlint/config-conventional"
        ]
    },
    "config": {
        "commitizen": {
            "path": "cz-conventional-changelog"
        }
    },
    "resolutions": {
        "npm/chalk": "^4.1.2"
    },
    "dependencies": {
        "@eslint-community/eslint-plugin-eslint-comments": "^4.1.0",
        "@next/eslint-plugin-next": "^13.4.19",
        "@rimac-technology/eslint-plugin": "^1.5.0",
        "@typescript-eslint/eslint-plugin": "^6.4.1",
        "@typescript-eslint/parser": "^6.4.1",
        "eslint-config-next": "^13.4.19",
        "eslint-plugin-etc": "^2.0.3",
        "eslint-plugin-import": "^2.28.1",
        "eslint-plugin-jest": "^27.2.3",
        "eslint-plugin-jest-formatting": "^3.1.0",
        "eslint-plugin-mobx": "^0.0.9",
        "eslint-plugin-more": "^1.0.5",
        "eslint-plugin-promise": "^6.1.1",
        "eslint-plugin-react": "^7.33.2",
        "eslint-plugin-react-hooks": "^4.6.0",
        "eslint-plugin-simple-import-sort": "^10.0.0",
        "eslint-plugin-sonarjs": "^0.20.0",
        "eslint-plugin-sort-destructure-keys": "^1.5.0",
        "eslint-plugin-sort-keys-fix": "^1.1.2",
        "eslint-plugin-testing-library": "^6.0.0",
        "eslint-plugin-type-graphql": "^1.0.0",
        "eslint-plugin-typescript-sort-keys": "^2.3.0",
        "eslint-plugin-unicorn": "^48.0.1",
        "eslint-plugin-unused-imports": "^3.0.0",
        "eslint-plugin-workspaces": "^0.9.0",
        "prettier-plugin-packagejson": "^2.4.5",
        "prettier-plugin-prisma": "^5.0.0",
        "stylelint-order": "^6.0.3"
    },
    "devDependencies": {
        "@commitlint/cli": "^17.7.1",
        "@commitlint/config-conventional": "^17.7.0",
        "@semantic-release/changelog": "^6.0.3",
        "@semantic-release/commit-analyzer": "^9.0.2",
        "@semantic-release/git": "^10.0.1",
        "@semantic-release/github": "^8.1.0",
        "@semantic-release/npm": "^9.0.2",
        "@semantic-release/release-notes-generator": "^10.0.3",
        "@types/react": "^18.2.21",
        "@types/react-dom": "^18.2.7",
        "commitizen": "^4.3.0",
        "conventional-changelog-conventionalcommits": "^5.0.0",
        "eslint": "^8.47.0",
        "husky": "^8.0.3",
        "jest": "^29.6.3",
        "npm-package-json-lint": "^7.0.0",
        "pinst": "^3.0.0",
        "prettier": "^3.0.2",
        "react": "^18.2.0",
        "react-dom": "^18.2.0",
        "semantic-release": "^20.1.3",
        "stylelint": "^15.2.0",
        "typescript": "^5.1.6"
    },
    "peerDependencies": {
        "eslint": "^8.27",
        "npm-package-json-lint": "^6",
        "prettier": "^8",
        "stylelint": "^14"
    },
    "peerDependenciesMeta": {
        "eslint": {
            "optional": true
        },
        "npm-package-json-lint": {
            "optional": true
        },
        "prettier": {
            "optional": true
        },
        "stylelint": {
            "optional": true
        }
    },
    "packageManager": "yarn@3.2.3",
    "engines": {
        "yarn": ">=3"
    },
    "publishConfig": {
        "access": "public"
    }
}
